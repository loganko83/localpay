# LocalPay Environment Configuration
# Copy this file to .env and fill in your values

# ==================== Mode ====================
# Set to 'true' to use mock data (for development)
# Set to 'false' or remove to use real APIs
VITE_USE_MOCK_DATA=true

# ==================== Backend API ====================
# Your backend API server URL
VITE_API_URL=http://localhost:8080/api

# ==================== Bank API (IBK) ====================
# IBK Bank API endpoint for payment processing
VITE_BANK_API_URL=https://api.ibk.co.kr/openbanking
VITE_BANK_API_KEY=your-ibk-api-key

# ==================== DID-BaaS ====================
# DID identity service for credential management
VITE_DID_BAAS_URL=https://trendy.storydot.kr/did-baas
VITE_DID_BAAS_API_KEY=your-did-baas-api-key

# ==================== Blockchain (Xphere) ====================
# Xphere blockchain RPC URL for audit anchoring
VITE_XPHERE_RPC_URL=https://en-bkk.x-phere.com
VITE_XPHERE_CHAIN_ID=20250217

# ==================== Exchange Rate API ====================
# Korea Eximbank API for tourist wallet exchange rates
VITE_EXCHANGE_API_KEY=your-korea-eximbank-api-key

# ==================== SMS/Email Gateway ====================
# SMS provider for OTP (twilio, nhn-cloud, etc.)
VITE_SMS_PROVIDER=nhn-cloud
VITE_SMS_API_KEY=your-sms-api-key
VITE_SMS_SENDER_NUMBER=your-sender-number

# Email provider for notifications
VITE_EMAIL_PROVIDER=sendgrid
VITE_EMAIL_API_KEY=your-email-api-key
VITE_EMAIL_FROM_ADDRESS=noreply@localpay.kr

# ==================== Push Notifications ====================
# Firebase Cloud Messaging for push notifications
VITE_FCM_API_KEY=your-fcm-api-key
VITE_FCM_PROJECT_ID=your-firebase-project-id

# ==================== Analytics ====================
# Google Analytics
VITE_GA_TRACKING_ID=G-XXXXXXXXXX

# ==================== Security ====================
# JWT secret (for local development only)
VITE_JWT_SECRET=your-jwt-secret-key

# API rate limiting
VITE_RATE_LIMIT_REQUESTS=100
VITE_RATE_LIMIT_WINDOW_MS=60000

# ==================== Feature Flags ====================
# Enable/disable specific features
VITE_ENABLE_TOURIST_WALLET=true
VITE_ENABLE_CARBON_POINTS=true
VITE_ENABLE_WELFARE_TOKENS=true
VITE_ENABLE_MERCHANT_CREDIT=true
VITE_ENABLE_BLOCKCHAIN_ANCHORING=true

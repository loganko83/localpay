# LocalPay Server Environment Configuration

# Server
PORT=8080
NODE_ENV=development

# Database
DB_PATH=./data/localpay.db

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-in-production

# CORS
CORS_ORIGIN=http://localhost:3000

# Rate Limiting (requests per 15 minutes)
RATE_LIMIT_MAX=100

# Bank API Integration (IBK Open Banking)
BANK_API_URL=https://api.ibk.co.kr/openbanking
BANK_API_KEY=your-bank-api-key

# DID-BaaS Integration
DID_BAAS_URL=https://trendy.storydot.kr/did-baas
DID_BAAS_API_KEY=your-did-baas-api-key

# Blockchain Configuration (Xphere)
BLOCKCHAIN_RPC_URL=https://mainnet.xphere.io
BLOCKCHAIN_CHAIN_ID=20250217
BLOCKCHAIN_WALLET_ADDRESS=your-wallet-address
BLOCKCHAIN_PRIVATE_KEY=your-private-key

# Logging
LOG_LEVEL=info

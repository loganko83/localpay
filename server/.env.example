# ===========================================
# LocalPay Server Environment Configuration
# ===========================================
# Copy this file to .env and fill in the values
# NEVER commit .env to version control

# Server
PORT=8080
NODE_ENV=development

# Database
DB_PATH=./data/localpay.db

# JWT Configuration (CRITICAL - Generate with: openssl rand -base64 32)
JWT_SECRET=CHANGE_THIS_TO_SECURE_256_BIT_SECRET
JWT_EXPIRES_IN=7d

# CORS (comma-separated origins)
CORS_ORIGIN=http://localhost:3000,http://localhost:5173

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX=100

# Security
MAX_LOGIN_ATTEMPTS=5
LOCKOUT_DURATION_MINUTES=15
SESSION_TIMEOUT_MINUTES=30

# Bank API Integration
BANK_API_URL=https://api.ibk.co.kr/openbanking
BANK_API_KEY=
BANK_API_SECRET=

# DID-BaaS Integration
DID_BAAS_URL=https://trendy.storydot.kr/did-baas
DID_BAAS_API_KEY=

# Blockchain (Xphere)
BLOCKCHAIN_RPC_URL=https://mainnet.xphere.io
BLOCKCHAIN_CHAIN_ID=20250217
BLOCKCHAIN_WALLET_ADDRESS=
BLOCKCHAIN_PRIVATE_KEY=

# Push Notifications (Firebase)
FCM_PROJECT_ID=
FCM_PRIVATE_KEY=
FCM_CLIENT_EMAIL=

# Email Service
EMAIL_PROVIDER=ses
EMAIL_FROM=noreply@localpay.kr
AWS_REGION=ap-northeast-2
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=

# Logging
LOG_LEVEL=info
LOG_DIR=./logs

# Backup Configuration
BACKUP_DIR=./backups
MAX_BACKUPS=10
BACKUP_COMPRESSION=false

# SMS Service (aligo, ncloud, twilio)
SMS_PROVIDER=aligo
SMS_API_KEY=
SMS_API_SECRET=
SMS_SENDER=

# Naver Cloud SMS (if using ncloud)
NCLOUD_SERVICE_ID=

# File Storage (local, s3)
STORAGE_PROVIDER=local
UPLOAD_DIR=./uploads
PUBLIC_URL=/uploads

# S3 Storage (if using s3)
S3_BUCKET=

# SendGrid (if using sendgrid for email)
SENDGRID_API_KEY=

# SMTP (if using smtp for email)
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASS=

# Frontend URL (for email links)
FRONTEND_URL=https://localpay.kr
